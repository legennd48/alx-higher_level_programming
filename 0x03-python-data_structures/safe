#include "lists.h"


/**
 * is_palindrome - checks if singly linked list is palindrome
 * @head: pointer to head-node of list
 * Return: 0 if its not or 1 if it is palindrome
 */

int is_palindrome(listint_t **head)
{
	listint_t *current = *head;
	unsigned int list_size = 0, index = 0;
	int buff[1024];

	if (head == NULL)
		return (0);

	if (*head == NULL)
		return (1);

	while (current != NULL)
	{
		current = current->next;
		list_size += 1;
	}

	if (list_size == 1)
		return (1);

	current = *head;
	while (current != NULL && index < 1024)
	{
		buff[index++] = current->n;
		current = current->next;
	}

	for (index = 0; index <= (list_size/2); index++)
	{
		if (buff[index] != buff[list_size - index - 1])
			return (0);
	}
	return (1);
}
